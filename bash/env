#!/usr/bin/env bash

# --------------------------------------------------------------------------
# Mac specific settings
# --------------------------------------------------------------------------

if [[ $(uname) == "Darwin" ]]; then
  
  # -- Path settings -----------------------------------------------------
  
  # Java
  [[ -d /Library/Java/Home ]] && export JAVA_HOME=/Library/Java/Home

  # Groovy
  if [[ -d /Library/Groovy/current ]]; then
    export GROOVY_HOME=/Library/Groovy/current
    export PATH=$GROOVY_HOME/bin:$PATH
  fi

  # Adobe Flex
  [[ -d /Library/Flex/current/bin ]] && \
    export PATH=/Library/Flex/current/bin:$PATH

  # Adobe Air
  [[ -d /Library/Air/current/bin ]] && \
    export PATH=/Library/Air/current/bin:$PATH

  # MacPorts
  if [[ -d /opt/local ]]; then
    export PATH=/opt/local/bin:/opt/local/sbin:$PATH
    export MANPATH=/opt/local/share/man:$MANPATH
    export INFOPATH=/opt/local/share/info:$INFOPATH
  fi

  # Git
  [[ -d /opt/local/libexec/git-core ]] && \
    export PATH=/opt/local/libexec/git-core:$PATH

  # Cuda
  if [[ -d /usr/local/cuda ]]; then
    export PATH=/usr/local/cuda/bin:$PATH
    export DYLD_LIBRARY_PATH=/usr/local/cuda/lib:$DYLD_LIBRARY_PATH
    export C_INCLUDE_PATH=/usr/local/cuda/include:$C_INCLUDE_PATH
    export CPP_INCLUDE_PATH=/usr/local/cuda/include:$CPP_INCLUDE_PATH
  fi
  
  # -- Misc --------------------------------------------------------------
  
  export EDITOR="mate -w"
  
fi

# --------------------------------------------------------------------------
# Linux specific settings
# --------------------------------------------------------------------------

if [[ `uname` == "Linux" ]]; then
  
  # -- Path settings -----------------------------------------------------
  
  # Cuda
  if [[ -d /usr/local/cuda ]]; then
    export PATH=/usr/local/cuda/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH
  fi
  
  # -- Misc --------------------------------------------------------------
  
  export EDITOR='vim'
  
fi

# --------------------------------------------------------------------------
# Common settings
# --------------------------------------------------------------------------

# -- Path settings ---------------------------------------------------------

[[ -d $HOME/bin ]] && export PATH=$HOME/bin:$PATH

# -- Directory colors ------------------------------------------------------

LS_COLORS=""
LS_COLORS=$LS_COLORS:"di=01;36:ln=01;04;35:ex=01;32:mi=01;30"
LS_COLORS=$LS_COLORS:"*.dmg=01;33:*.rar=01;33:*.tar.gz=01;33:*tar.bz2=01;33"
LS_COLORS=$LS_COLORS:"*.tgz=01;33:*.zip=01;33"
LS_COLORS=$LS_COLORS:"*.c=01;31:*.cpp=01;31:*.h=01;31:*.rb=01;31:*.sh=01;31:"
export LS_COLORS

# -- Remote login ----------------------------------------------------------

if [[ -n $SSH_CLIENT ]]; then
  export REMOTE_LOGIN=true
else
  export REMOTE_LOGIN=false
fi
